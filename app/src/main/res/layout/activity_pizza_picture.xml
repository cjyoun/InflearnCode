<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".level1.picturepizza.PizzaPictureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <!-- 사진 둥글게 만들기(CardView 사용)
         안드로이드 버전에 따라 안될 수도 있으니 안되면 dependency 추가 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_margin="10dp">


            <ImageView
                android:src="@drawable/pizza1"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="150dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_margin="10dp">
            <ImageView
                android:src="@drawable/pizza2"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="150dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_margin="10dp">
            <ImageView
                android:src="@drawable/pizza3"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="150dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_margin="10dp">
            <ImageView
                android:src="@drawable/pizza4"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="150dp"/>
        </androidx.cardview.widget.CardView>

        <!-- 사진 맞추기 scaleType=fitXY-->
        <ImageView
            android:src="@drawable/pizza5"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"/>

    </LinearLayout>



</LinearLayout>